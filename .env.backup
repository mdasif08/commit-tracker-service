# Application settings
DEBUG=false
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8001

# Database settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/commit_tracker

# CORS settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Git settings
GIT_REPO_PATH=.

# Webhook settings
WEBHOOK_SECRET=your-webhook-secret-here

# Authentication settings
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Monitoring settings
ENABLE_METRICS=true

# External service URLs (for future integration)
GITHUB_WEBHOOK_SERVICE_URL=http://localhost:8000
AI_ANALYSIS_SERVICE_URL=http://localhost:8002
COACHING_SERVICE_URL=http://localhost:8003
